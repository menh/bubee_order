page{
  height:100%;
  width: 100%;
}
.order-address{
  background: #F09F36;
  height:200rpx;
  width: 100%;
  top:0rpx;
  position: fixed;
  display: flex;
  flex-direction: column;
}
.order-address-first-row{
  display:flex;
  flex-direction: row;
  justify-content: space-around;
}

.order-bubee-address-detail{
  font-size: 32rpx;
  color: #FFA500;
  margin-top: 20rpx;
  margin-left: 20rpx;
  background:white;
  padding:10rpx;
  height:38rpx;
  border-radius: 30rpx;
  text-align: center;
  width: 200rpx;
}

.order-address-second-row{
  display:flex;
  flex-direction: row;
}
.order-address-phone{
  margin-left:30rpx;
}

.order-tri-pic{
  height:26rpx;
  width:26rpx;
  margin-top: 9rpx; 
  margin-left: 20rpx;
  transform: rotate(180deg)
}

.order-box{
  position: relative;
  top:300rpx;
}
.order-detail{
  display: flex;
  flex-direction: row;
  border-bottom: solid;
  border-bottom-color: #E7E1E1;
}
.order-detail-error{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  vertical-align: middle;
  text-align: center;
}


.order-detail-name{
  width:200rpx;
  height:80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  vertical-align: middle;
}
.order-detail-num{
  width:100rpx;
  height:80rpx;
  line-height: 80rpx;
  margin-left: 270rpx;
  font-size: 30rpx;
  vertical-align: middle;
}
.order-detail-price{
  width:100rpx;
  height:80rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  vertical-align: middle;
}
.order-detail-deliver{
  width:100%;
  height:80rpx;
  border-bottom: solid;
  border-width: 20rpx;
  border-bottom-color: #E7E1E1;
  display: flex;
  flex-direction: row;
}
.order-detail-deliver-label{
  width:150rpx;
  height:80rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  vertical-align: middle;
}

.order-detail-deliver-pei{
  width: 80rpx;
  height:80rpx;
  font-size: 30rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
  color: white;
  background-color: blue;
}
.order-detail-deliver-fee{
  margin-left: 440rpx;
  height:80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  vertical-align: middle;
}
.order-detail-coupon{
  width:100%;
  height:100rpx;
  display: flex;
  flex-direction: row;
}
.order-detail-coupon-label{
  width:150rpx;
  height:100rpx;
  line-height: 100rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  vertical-align: middle;
}
.order-detail-coupon-hui{
  width: 80rpx;
  height:80rpx;
  font-size: 30rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
  color: white;
  background-color: pink;
}

.order-detail-coupon-select{
  margin-left: 380rpx;
  height:80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  vertical-align: middle;
}

.footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 10rpx 0 80rpx;
    box-sizing: border-box;
    background: #AB956D;
    color: #fff;
}

.to-pay{
  float: right;
  position: absolute;
  right: 20rpx;
  top: 5rpx;
  width: 220rpx;
  height: 45rpx;
}